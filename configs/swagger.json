{
  "openapi": "3.0.3",
  "info": {
    "title": "Song Dir API",
    "version": "1.0.0",
    "contact": {
      "email": "doanvanduytien@gmail.com"
    }
  },
  "servers": [],
  "tags": [
    {
      "name": "users",
      "description": "Người dùng"
    },
    {
      "name": "songs",
      "description": "bài hát"
    },
    {
      "name": "collections",
      "description": "Collection"
    },
    {
      "name": "playlists",
      "description": "Playlist"
    },
    {
      "name": "comments",
      "description": "Comment"
    },
    {
      "name": "genres",
      "description": "Genre"
    }
  ],
  "paths": {
    "/songs": {
      "get": {
        "summary": "Lấy tất cả bài hát",
        "tags": [
          "songs"
        ],
        "description": "Lấy tất cả bài hát, có tìm kiếm theo tên và album",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "description": "Từ khóa tìm kiếm theo tên và album",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "description": "Trang",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Giới hạn",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "post": {
        "summary": "Tạo bài hát mới",
        "description": "Tự upload bài hát và điền các field, k điền tên thì tên lấy theo file của bài hát",
        "tags": [
          "songs"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Song"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorize"
          }
        }
      }
    },
    "/songs/{id}": {
      "get": {
        "summary": "Lấy bài hát theo id",
        "tags": [
          "songs"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "delete": {
        "tags": [
          "songs"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Xóa bài hát",
        "description": "Xóa bài hát theo id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/songs/default_thumbnail": {
      "post": {
        "summary": "Upload default image cho bai hat",
        "description": "Admin moi co the upload default image",
        "tags": [
          "songs"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "defaultThumbnail": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/collections/topviews": {
      "get": {
        "summary": "Lấy top bài hát được nghe nhiều",
        "tags": [
          "collections"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/collections/recently_songs": {
      "get": {
        "summary": "Lay cac bai hat gan day",
        "tags": [
          "collections"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/collections/genre/{genre}": {
      "get": {
        "summary": "Lấy bài hát theo thể loại",
        "tags": [
          "collections"
        ],
        "parameters": [
          {
            "name": "genre",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/collections/my_tracks": {
      "get": {
        "summary": "Lay danh sach bai hat da upload cua minh",
        "tags": [
          "collections"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Đăng ký",
        "tags": [
          "users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Fail"
          }
        }
      }
    },
    "/login": {
      "get": {
        "summary": "Đăng nhập",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string",
              "example": "doanvanduytien@gmail.com"
            }
          },
          {
            "name": "password",
            "in": "query",
            "schema": {
              "type": "string",
              "example": "sdfsdfsdfsdf"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Fail"
          }
        }
      }
    },
    "/send_verify_code": {
      "post": {
        "summary": "Gửi verify code về email",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "default": {
            "description": "Chill"
          }
        }
      }
    },
    "/verify_account": {
      "post": {
        "summary": "Xác nhận email của account",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string",
              "example": "doanvanduytien@gmail.com"
            }
          },
          {
            "name": "verifyCode",
            "in": "query",
            "schema": {
              "type": "string",
              "example": "666666"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Verify code wrong"
          }
        }
      }
    },
    "/reset_password": {
      "post": {
        "summary": "Gửi mật khẩu đã reset về email",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/my_profile": {
      "get": {
        "summary": "Lấy profile",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Id cua user"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/change_password": {
      "patch": {
        "summary": "Đổi mật khẩu",
        "tags": [
          "users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": [
                  "oldPassword",
                  "newPassword"
                ],
                "properties": {
                  "oldPassword": {
                    "type": "string",
                    "example": "Your old password"
                  },
                  "newPassword": {
                    "type": "string",
                    "example": "Your new password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/comments/{songId}": {
      "get": {
        "summary": "Lấy comment của 1 song",
        "tags": [
          "comments"
        ],
        "parameters": [
          {
            "name": "songId",
            "in": "path",
            "description": "Id của bài hát",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Song not found"
          }
        }
      }
    },
    "/comments": {
      "post": {
        "summary": "Tạo comment",
        "tags": [
          "comments"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "text",
                  "userId",
                  "songId"
                ],
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Nội dung tin nhắn"
                  },
                  "songId": {
                    "type": "string",
                    "example": "Id của bài hát được bình luận"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Error"
          }
        }
      }
    },
    "/comments/{commentId}": {
      "parameters": [
        {
          "name": "commentId",
          "in": "path",
          "description": "Id của comment",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "patch": {
        "summary": "Sửa nội dung tin nhắn",
        "tags": [
          "comments"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "text"
                ],
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Nội dung muốn sửa"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success"
          },
          "401": {
            "description": "Unauthorize"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "delete": {
        "summary": "Xóa comment",
        "tags": [
          "comments"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorize"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/genres": {
      "get": {
        "summary": "Thể loại",
        "tags": [
          "genres"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "post": {
        "summary": "Tạo thể loại",
        "tags": [
          "genres"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "genreName": {
                    "type": "string",
                    "example": "Tên thể loại"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "UnauthorizeError": {
        "description": "Unauthorize"
      }
    },
    "schemas": {
      "Song": {
        "type": "object",
        "required": [
          "audio"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Tên bài hát"
          },
          "audio": {
            "type": "string",
            "format": "binary",
            "description": "Bài hát"
          },
          "thumbnail": {
            "type": "string",
            "format": "binary",
            "description": "Thumbnail của bài hát"
          },
          "genreId": {
            "type": "string",
            "description": "Id cua genre"
          }
        }
      },
      "Album": {
        "type": "object",
        "required": [
          "collectionName"
        ],
        "properties": {
          "collectionName": {
            "type": "string",
            "description": "Tên của album"
          },
          "user": {
            "type": "string",
            "description": "Id nguời dùng"
          },
          "collectionImage": {
            "type": "string",
            "format": "binary",
            "description": "Ảnh của album"
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Tên người dùng"
          },
          "email": {
            "type": "string",
            "description": "Email"
          },
          "password": {
            "type": "string",
            "description": "Mật khẩu"
          }
        }
      },
      "Comment": {
        "type": "object",
        "required": [
          "text",
          "user"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Nội dung tin nhắn"
          },
          "user": {
            "type": "string",
            "description": "Id của người dùng"
          }
        }
      }
    }
  }
}